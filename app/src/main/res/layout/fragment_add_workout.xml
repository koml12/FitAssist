<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.koml2.fitassist.addworkout.AddWorkoutFragment"
>

    <EditText
            android:id="@+id/et_add_workout_workout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_workout_name"/>

    <Button
            android:id="@+id/btn_add_workout_add_workout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_add_workout_workout_name"
            android:text="@string/add_workout_add"/>


</RelativeLayout>
