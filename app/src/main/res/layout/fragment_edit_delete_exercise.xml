<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.koml2.fitassist.editdeleteexercise.EditDeleteExerciseFragment">

    <EditText
            android:id="@+id/et_edit_exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_exercise_name"
    />


    <EditText
            android:id="@+id/et_edit_exercise_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_edit_exercise_name"
            android:inputType="number"
            android:hint="@string/edit_exercise_sets"
    />


    <EditText
            android:id="@+id/et_edit_exercise_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_edit_exercise_sets"
            android:inputType="number"
            android:hint="@string/edit_exercise_reps"

    />


    <EditText
            android:id="@+id/et_edit_exercise_rest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_edit_exercise_reps"
            android:inputType="numberDecimal"
            android:hint="@string/edit_exercise_rest"
    />


    <EditText
            android:id="@+id/et_edit_exercise_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_edit_exercise_rest_time"
            android:hint="@string/edit_exercise_notes"
    />

    <Button
            android:id="@+id/btn_edit_exercise_update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_edit_exercise_notes"
            android:text="@string/edit_exercise_button_update"
    />

    <Button
            android:id="@+id/btn_edit_exercise_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_edit_exercise_update_button"
            android:text="@string/edit_exercise_button_delete"
    />



</RelativeLayout>
